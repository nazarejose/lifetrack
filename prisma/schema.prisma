datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(uuid())
  email    String
  password String
  name     String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  habits    Habit[]

  @@map("user")
}

model Habit {
  id          String    @id @default(uuid())
  name        String
  description String?
  frequency   String
  createdAt   DateTime  @default(now())

  userId      String
  user        User      @relation(fields: [userId], references: [id])

  @@map("habits")
}
