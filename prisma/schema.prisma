datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String @id @default(uuid())
  email    String
  password String
  name     String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  habits       Habit[]
  transactions Transaction[]

  @@map("user")
}

model Habit {
  id          String   @id @default(uuid())
  name        String
  description String?
  frequency   String
  createdAt   DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  @@map("habits")
}

enum TransactionType {
  INCOME
  EXPENSE
}

model Transaction {
  id              String          @id @default(uuid())
  description     String
  amount          Int
  transactionType TransactionType
  date            DateTime
  userId          String
  user            User            @relation(fields: [userId], references: [id])

  @@map("transactions")
}
