{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true
      },
      {
        "include": "../node_modules/.prisma/client/**/*",
        "outDir": "./dist/node_modules/.prisma/client",
        "watchAssets": false
      }
    ],
    "watchAssets": true
  }
}
